# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=web_scan
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
DATABASE_URL=postgresql://postgres:password@localhost:5432/web_scan

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# React WebSocket Configuration
REACT_APP_WS_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@web-scan.com

# SMS Configuration (for alerts - using Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google Cloud API Key (for threat detection)
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# External API Keys
SHODAN_API_KEY=your-shodan-api-key
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SECURITYTRAILS_API_KEY=your-securitytrails-api-key

# Monitoring Configuration
MONITORING_DEFAULT_SCHEDULE=0 */6 * * *  # Every 6 hours
MONITORING_MAX_CONCURRENT_SCANS=5
MONITORING_TIMEOUT_MS=300000  # 5 minutes

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000
WS_MAX_CONNECTIONS=1000

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Development/Production Flags
DISABLE_GUI=false
PLATFORM=local

# Plugin Configuration
PLUGINS_DIR=./plugins
PLUGINS_ENABLED=true
